{
  "name": "claude-code-monitor",
  "version": "0.1.0",
  "description": "监控所有 Claude Code 会话，当等待输入或会话结束时通知用户",
  "type": "module",
  "bin": {
    "claude-monitor": "./dist/cli.js"
  },
  "scripts": {
    "dev:daemon": "tsx src/daemon/index.ts",
    "dev:cli": "tsx src/cli/index.ts",
    "build": "tsup",
    "start": "node dist/daemon.js",
    "cli": "node dist/cli.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "claude",
    "claude-code",
    "monitor",
    "notification"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/ws": "^8.18.1",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
