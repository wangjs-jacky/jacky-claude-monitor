{
  "name": "@wangjs-jacky/claude-monitor",
  "version": "0.1.0",
  "description": "监控所有 Claude Code 会话，当等待输入或会话结束时通知用户",
  "type": "module",
  "bin": {
    "claude-monitor": "./dist/cli.js"
  },
  "files": [
    "dist",
    "hooks",
    "swift-notify/main.swift"
  ],
  "scripts": {
    "dev:daemon": "tsx src/daemon/index.ts",
    "dev:cli": "tsx src/cli/index.ts",
    "dev:web": "cd src/web && pnpm dev",
    "build": "tsup",
    "build:web": "cd src/web && pnpm install && pnpm build",
    "build:all": "pnpm build && pnpm build:web",
    "start": "node dist/daemon.js",
    "cli": "node dist/cli.js",
    "prepublishOnly": "pnpm build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "claude",
    "claude-code",
    "monitor",
    "notification",
    "hooks"
  ],
  "author": "wangjs-jacky",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wangjs-jacky/jacky-claude-monitor.git"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/ws": "^8.18.1",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "os": ["darwin"]
}
